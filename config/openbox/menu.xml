<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="OB Configure">
    <action name="Reconfigure" />
  </item>
  <item label="OB Restart">
    <action name="Restart" />
  </item>
  <separator />
  <item label="Log out">
    <action name="Exit" />
  </item>
  <separator />
  <item label="Terminal">
    <action name="Execute"><execute>urxvt</execute></action>
  </item>
  <item label="Browser">
    <action name="Execute"><execute>google-chrome-stable</execute></action>
  </item>
  <item label="OpenSCAD">
    <action name="Execute"><execute>openscad</execute></action>
  </item>
  <!-- This requires the presence of the 'menu' package to work -->
  <menu id="/Debian" />
  <separator />
  <menu id="client-list-menu" />
</menu>

</openbox_menu>
